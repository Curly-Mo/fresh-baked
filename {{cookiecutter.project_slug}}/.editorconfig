# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.py]
max_line_length = 120

[*.yml]
tab_width = 2

[*.json]
indent_size = 2
insert_final_newline = ignore

[Makefile]
indent_style = tab
